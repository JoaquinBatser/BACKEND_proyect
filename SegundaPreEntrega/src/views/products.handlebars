<h1>Products</h1>
<div class='pagination'>
  {{#if hasPrevPage}}
    <a href='/products?page={{prevPage}}'><button><i
          class='fa-solid fa-arrow-left-long'
        ></i></button></a>
  {{else}}
    <button disabled class='pagination-button-disabled'><i class='fa-solid fa-ban'></i></button>
  {{/if}}

  <div class='page'>
    {{currentPage}}
  </div>

  {{#if hasNextPage}}
    <a href='/products?page={{nextPage}}'><button><i
          class='fa-solid fa-arrow-right-long'
        ></i></button></a>
  {{else}}
    <button disabled class='pagination-button-disabled'><i class='fa-solid fa-ban'></i></button>
  {{/if}}
</div>

<div class='products-list'>
  {{#each products}}
    <div class='product-container'>
      <div class='product-image'><img
          src='https://via.assets.so/img.jpg?w=200&h=200&tc=white&bg=black&t=img'
          alt={{this.title}}
        /></div>
      <div class='product-details'>
        <small id='{{this.id}}'>{{this.id}}</small>
        <h3>{{this.title}}</h3>
        <p>{{this.category}}</p>
        <p>{{this.description}}</p>
        <p>${{this.price}}</p>
        <p>{{this.stock}}</p>
        <p>{{this.code}}</p>
      </div>
      <button type='button' class='add-to-cart-button' id='add-to-cart-btn'>Add to Cart</button>
    </div>
  {{/each}}
</div>

<script type='text/javascript' src='/js/products.js'></script>